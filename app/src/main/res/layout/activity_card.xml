<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.utente3academy.restdipendenti.CardActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/relativeLayout2"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tValM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="113dp"
            android:text="Matricola"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tValC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tValM"
            android:layout_below="@+id/tValM"
            android:layout_marginTop="12dp"
            android:text="Cognome"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/tValN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tValC"
            android:layout_below="@+id/tValC"
            android:layout_marginTop="15dp"
            android:text="Nome"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/tDipe"
        android:layout_centerVertical="true"
        android:layout_marginStart="15dp">

        <TextView
            android:id="@+id/tMatricola"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Matricola:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tCognome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tMatricola"
            android:layout_marginTop="12dp"
            android:text="Cognome:"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/tMatricola"
            android:text="Nome:"
            android:textAlignment="center"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tDipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:fontFamily="cursive"
        android:text="Ecco il Dipendente..."
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="italic" />

</RelativeLayout>
